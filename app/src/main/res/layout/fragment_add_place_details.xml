<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".auth.LoginFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/card_color8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <!-- Left ImageView -->
                <ImageView
                    android:id="@+id/iv_arrow_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:src="@drawable/ic_arrow_back" />

                <!-- Center TextView -->
                <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/font_bold"
                    android:text="Add New Place"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/_16ssp" />

                <!-- Right ImageView -->
                <TextView
                    android:id="@+id/tv_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:fontFamily="@font/font_regular"
                    android:text="Next"
                    android:enabled="false"
                    android:textColor="#ffffff"
                    android:alpha="0.5"
                    android:textSize="@dimen/_16ssp" />

            </androidx.appcompat.widget.Toolbar>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:fontFamily="@font/font_semi_bold"
                android:text="Describe About Your Place"
                android:textSize="@dimen/_16ssp"
                android:textColor="@color/color_primary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolbar" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ti_layout_place_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:hint="Ie: My Shop"
                app:counterEnabled="true"
                app:counterMaxLength="650000"
                app:endIconMode="clear_text"
                app:errorEnabled="true"
                app:errorTextColor="@color/red"
                app:helperText="Minimum of 10 characters"
                app:hintAnimationEnabled="false"
                app:layout_constraintEnd_toEndOf="@+id/tv_title"
                app:layout_constraintStart_toStartOf="@+id/tv_title"
                app:layout_constraintTop_toBottomOf="@+id/tv_title">


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_place_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:inputType="text | textMultiLine"
                    android:paddingVertical="@dimen/_20sdp"
                    android:text=""
                    android:textColor="@color/color_primary"
                    android:textColorHint="@color/color_primary"
                    android:textSize="@dimen/_10sdp" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tv_where_it_is_located"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                android:fontFamily="@font/font_semi_bold"
                android:text="Price Range?"
                android:textSize="@dimen/_16ssp"
                android:textColor="@color/color_primary"
                app:layout_constraintStart_toStartOf="@+id/ti_layout_place_name"
                app:layout_constraintTop_toBottomOf="@+id/ti_layout_place_name" />

            <RadioGroup
                android:id="@+id/price_range_btn_group"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="@+id/ti_layout_place_name"
                app:layout_constraintStart_toStartOf="@+id/ti_layout_place_name"
                app:layout_constraintTop_toBottomOf="@+id/tv_where_it_is_located">

                <RadioButton
                    android:id="@+id/rb_inexpensive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:background="@drawable/radio_button_background"
                    android:gravity="center"
                    android:textColor="@color/color_primary"
                    android:text="Inexpensive" />

                <RadioButton
                    android:id="@+id/rb_moderate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_12sdp"
                    android:layout_weight="1"
                    android:button="@null"
                    android:background="@drawable/radio_button_background"
                    android:gravity="center"
                    android:textColor="@color/color_primary"
                    android:text="Moderate" />

                <RadioButton
                    android:id="@+id/rb_expensive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:background="@drawable/radio_button_background"
                    android:gravity="center"
                    android:textColor="@color/color_primary"
                    android:text="Expensive" />

            </RadioGroup>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>