<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="200">
       <KeyFrameSet>
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/chip_group_places"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/tv_place_type"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/_12sdp"
            android:visibility="gone" />
        <Constraint
            android:id="@+id/tv_place_arrow"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_12sdp"
            motion:layout_goneMarginStart="@dimen/_12sdp"
            android:rotation="90"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/_12sdp" />
        <Constraint
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toTopOf="@+id/tv_place_arrow"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            motion:layout_goneMarginStart="@dimen/_12sdp"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/tv_place_type" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/chip_group_places"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/tv_place_type"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/_12sdp"
            android:visibility="visible" />

        <Constraint
            android:id="@+id/tv_place_arrow"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_12sdp"
            motion:layout_goneMarginStart="@dimen/_12sdp"
            android:rotation="-90"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/_12sdp" />
    </ConstraintSet>
</MotionScene>